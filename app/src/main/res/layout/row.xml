<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lvh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/txtean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="#ffb6ffb0"
            android:gravity="center"
            android:text="123456"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtbrand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:background="#ffc5ffe3"
            android:gravity="center"
            android:text="Marca"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/lvh3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/txtgroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.1"
            android:background="#87e487"
            android:gravity="center_vertical|center_horizontal"
            android:text="Tipologia"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtValuta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="#ffaa"
            android:gravity="center_vertical|center_horizontal"
            android:text="€"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#ffaa"
            android:gravity="center_vertical|center_horizontal"
            android:text="€"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lvh2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/txtmodel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffd3f5ff"
            android:gravity="center"
            android:text="Prodotto"
            android:textColor="#000"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#fff"></View>

</LinearLayout>